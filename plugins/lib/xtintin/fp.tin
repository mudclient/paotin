#func {mapIf} {
    #local table {%1};
    #local cond {%2};
    #local body {%3};

    #local key      {};
    #local value    {};

    #replace {cond} {KEY} {$$key};
    #replace {cond} {VALUE} {$$value};
    #replace {body} {KEY} {$$key};
    #replace {body} {VALUE} {$$value};

    #local newTable {};
    #local key {};
    #foreach {*table[]} {key} {
        #local value {$table[$key]};
        #line sub var {
            #if { $cond } {
                #cat newTable {{$key}{$body}};
            };
            #else {
                #cat newTable {{$key}{$value}};
            };
        };
    };

    #return {$newTable}
};

#func {map} {
    #local table {%1};
    #local body {%2};

    #local key      {};
    #local value    {};

    #replace {body} {KEY} {$$key};
    #replace {body} {VALUE} {$$value};

    #local newTable {};
    #local key {};
    #foreach {*table[]} {key} {
        #local value {$table[$key]};
        #cat newTable {{$key}{$body}};
    };

    #return {$newTable}
};
