#read framework/main.tin;

#var user[id]       LOCAL;
#var user[name]     本地测试;

#alias {auto-login} {
    setup;
    greeting;
};

#alias {setup} {
    #line quiet #port init null 0;
    #untick {KeepAlive};
    load-lib event;
    load-lib ui;
};

#alias {greeting} {
    okLog 欢迎使用 PaoTin++！;
    okLog 输入 <134>HELP paotin<129> 和 <134>HELP xtintin<129> 可以开始了解 PaoTin++。;
    okLog 更多学习资料和社区资源可以查看 <134>HELP NEWBIE<129>。<131>所有命令注意区分大小写<129>。;
};

#alias {test} {
    load-module foo;
};

#class local-console open;

#alias {%*} {#showme 你奋笔疾书，挥毫落纸：「<060>%0<070>」} {9.999};

#class local-console close;

#event {SESSION CREATED} {
    #info session save;
    #if { $info[SESSION][PORT] > 0 } {
        #class local-console kill;
    };
};
