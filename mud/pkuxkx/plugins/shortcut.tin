#alias {list-armors} {
    #class rbz-list-armors open;

    #action {^┏所有防具列表┓$} {
        #class rbz-list-armors open;

        #gag {^│%d%s│%*│1%s│$};

        #action {^│%d%s│%*(%*)%*│2%s│$} {
            #if { "%%%4" != "{ring|necklace}" } {
                #line gag;
            };
        };

        #high {^%*({ring|necklace})%*$} {light magenta};

        #action {^└─────┴────────────────────┴──┴──┴───┘$} {
            #class rbz-list-armors kill;
            #buffer end;
        };

        #class rbz-list-armors close;
    };

    #action {^你不是刚看过么？$} {
        #class rbz-list-armors kill;
    };

    #class rbz-list-armors close;

    list armors;
};

