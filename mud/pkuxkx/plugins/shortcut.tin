        #line oneshot #action {^艄公说“到啦，上岸吧”，随即把一块踏脚板搭上堤岸。$} {
            out;
            walk $target;
        } {4};
        enter;
    } {4};

    xtt.Tick map.yell {yell boat} 1;
};
